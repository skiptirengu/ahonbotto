{
  "name": "ahonbotto",
  "version": "1.0.0",
  "description": "Shitty discord bot",
  "main": "index.ts",
  "repository": {
    "url": "https://github.com/skiptirengu/ahonbotto"
  },
  "scripts": {
    "test": "yarn lint",
    "build": "node --max_old_space_size=8192 node_modules/typescript/bin/tsc",
    "build:watch": "tsc -w",
    "build:start": "yarn build && yarn start",
    "build:forever": "yarn build && yarn start:forever",
    "forever:logs": "forever logs 0 -f",
    "lint": "eslint lib/**/*.ts index.ts env.ts",
    "lint:fix": "eslint lib/**/*.ts index.ts env.ts --fix",
    "start": "node dist/index.js",
    "start:forever": "forever start dist/index.js",
    "stop:forever": "forever stop 0 -f",
    "install:yt": "node ./node_modules/youtube-dl/scripts/download.js",
    "runtime:cleanup": "rm -rf ./runtime/db && rm -rf ./runtime/http-cache && rm -rf ./runtime/logs"
  },
  "pre-commit": {
    "run": "lint"
  },
  "author": "Me",
  "license": "WTFPL",
  "dependencies": {
    "@discordjs/opus": "^0.3.2",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.1.0",
    "bufferutil": "^4.0.1",
    "dayjs": "^1.8.31",
    "discord.js": "^12.2.0",
    "dotenv": "^8.2.0",
    "ffmpeg-static": "^4.2.6",
    "fs-extra": "^9.0.1",
    "libsodium-wrappers": "^0.7.6",
    "lodash": "^4.17.19",
    "markov-generator": "^1.2.3",
    "miniget": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.3.0",
    "typescript": "^3.9.7",
    "wikijs": "^6.0.1",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^2.3.2",
    "youtube-dl": "skiptirengu/node-youtube-dl#142970ee6e9e4581a6108e09722d89bd27c67250",
    "youtube-search": "^1.1.4",
    "ytdl-core": "^3.2.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^5.4.0",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.158",
    "@types/node": "^14.0.27",
    "@types/youtube-dl": "^1.12.2",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "forever": "^3.0.0",
    "node-gyp": "^7.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5"
  }
}
