    "lodash": "^4.17.15",
    "miniget": "^1.7.0",
    "node-opus": "skiptirengu/node-opus",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.1.0",
    "typescript": "^3.8.3",
    "wikijs": "^6.0.1",
